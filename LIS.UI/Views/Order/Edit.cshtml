<script>
    $(document).ready(function () {
        $("#myform").validate({
            rules: {
                patientid: {
                    required: true,

                },
                equipementid: {
                    required: true,

                },
                quantity: {
                    required: true,
                    number: true
                },
                purchaseprice: {
                    required: true,
                    number: true
                },

            }
        })
    })
</script>

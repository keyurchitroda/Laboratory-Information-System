
@{
    ViewBag.Title = "Sample";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sample</h2>
<form id="frmsample">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Manage Sample</div>
                    </div>
                    <div class="card-body col-md-7">

                        <div class="form-group">
                            <label for="selectspatientid" class=" form-control-label">Patient ID</label>

                            <select name="selectspatientid" id="selectspatientid" class="form-control-sm form-control">
                                <option value="0">Please select</option>
                                <option value="1">Option #1</option>
                                <option value="2">Option #2</option>
                                <option value="3">Option #3</option>
                                <option value="4">Option #4</option>
                                <option value="5">Option #5</option>
                            </select>

                        </div>
                        <div class="form-group">
                            <label for="collecteddate" class="form-control-label">Date and time</label>

                            <input class="form-control" type="datetime-local" value="2011-08-19T13:45:00" id="collecteddate" />

                        </div>
                        <div class="form-group">
                            <label for="processddate" class="form-control-label">Date and time</label>

                            <input class="form-control" type="datetime-local" value="2011-08-19T13:45:00" id="processddate" />

                        </div>
                        <div class="form-group">
                            <label class=" form-control-label" for="txtpriority">Priority</label>
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-male"></i></div>
                                <input class="form-control" id="txtpriority" name="txtpriority">
                            </div>
                            
                        </div>
                        
                        <div class="form-group">
                            <input type="button" id="btnsamplesave" name="btnsamplesave" class="btn btn-success" value="Save" />
                            <input type="button" name="btnsamplecancel" class="btn btn-default" value="Cancel" />
                        </div>
                    </div>
                    <div class="card-footer">

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


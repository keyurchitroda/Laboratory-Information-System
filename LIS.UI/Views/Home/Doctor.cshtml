
@{
    ViewBag.Title = "Doctor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Doctor</h2>

<form id="frmdoctor">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Manage Doctor</div>
                    </div>
                    <div class="card-body col-md-7">
                        <div class="form-group">
                            <label for="txtdoctorname">Doctor Name</label>
                            <input type="text" class="form-control" id="txtdoctorname" name="txtdoctorname" />
                        </div>
                        <div class="form-group">
                            <label for="txtdmobile">Mobile Number</label>
                            <input type="text" class="form-control" id="txtdmobile" name="txtdmobile" />
                        </div>
                        <div class="form-group">
                            <label for="txtddesignamtion">Designation</label>
                            <input type="text" class="form-control" id="txtddesignamtion" name="txtddesignamtion" />
                        </div>
                        <div class="form-group">
                            <label for="txtdemail">Email</label>
                            <input type="text" class="form-control" id="txtdemail" name="txtdemail" />
                        </div>
                        <div class="form-group">
                            <label for="selectdpatientid" class=" form-control-label">Patient id</label>

                            <select name="selectdpatientid" id="selectdpatientid" class="form-control-sm form-control">
                                <option value="0">Please select</option>
                                <option value="1">Option #1</option>
                                <option value="2">Option #2</option>
                                <option value="3">Option #3</option>
                                <option value="4">Option #4</option>
                                <option value="5">Option #5</option>
                            </select>

                        </div>
                        <div class="form-group">
                            <input type="button" id="btndoctorsave" name="btndoctorsave" class="btn btn-success" value="Save" />
                            <input type="button" name="btndoctorcancel" class="btn btn-default" value="Cancel" />
                        </div>
                    </div>
                    <div class="card-footer">

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


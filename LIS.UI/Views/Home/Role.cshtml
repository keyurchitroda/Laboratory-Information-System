
@{
    ViewBag.Title = "Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form id="frmrole">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Manage Roles</div>
                    </div>
                    <div class="card-body col-md-7">
                        <div class="form-group">
                            <label for="txtrolename">Role Name</label>
                            <input type="text" class="form-control" id="txtrolename" name="txtrolename" />
                        </div>
                        <div class="form-group">
                            <label for="txtroledescription">Description</label>
                            <textarea class="form-control" id="txtroledescription" name="txtroledescription"></textarea>
                        </div>
                        <div class="form-check">
                            <div class="checkbox">
                                <label for="chkroleactive">
                                    <input type="checkbox" id="chkroleactive" name="chkroleactive" class="form-check-input" />Active
                                </label>
                            </div>

                        </div>
                        <div class="form-group">
                            <input type="button"id="btnrolesave" name="btnrolesave" class="btn btn-success" value="Save" />
                            <input type="button" name="btnrolecancel" class="btn btn-default" value="Cancel" />
                        </div>
                    </div>
                    <div class="card-footer">

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<script type="text/javascript">
    jQuery("#frmrole").validate({
        rules: {
            "txtrolename": {
                required: true,
             
                maxlength: 60,

            },
            "txtroledescription": {

                maxlength: 200,

            }


        },
        messages: {
            "txtrolename": {
                required: "Please enter role name.",
                maxlength:"Role name cannot be more than 60 characters."
            },
            "txtroledescription": {
                  maxlength:"Description can not be more than 200 characters."
            }

        },
        errorElement: 'div',
        errorPlacement: function (error, element) {
            var placement = jQuery(element).data('error');
            if (placement) {
                jQuery(placement).append(error)
            } else {
                error.insertAfter(element);
            }
        }


    });
    jQuery(document).ready(function () {
        jQuery(document).off("click", "#btnrolesave");
        jQuery(document).on("click", "#btnrolesave", function (e) {
            if (jQuery("#frmrole").valid()) {

            }
        });
    });
</script>

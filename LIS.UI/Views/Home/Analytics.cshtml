
@{
    ViewBag.Title = "Analytics";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Analytics</h2>
<form id="frmanalytics">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Manage Analytics</div>
                    </div>
                    <div class="card-body col-md-7">
                        <div class="form-group">
                            <label for="txtditem">Diagnosis Item</label>
                            <input type="text" class="form-control" id="txtditem" name="txtditem" />
                        </div>
                        <div class="form-group">
                            <label for="txtvalue">Value</label>
                            <input type="text" class="form-control" id="txtvalue" name="txtvalue" />
                        </div>
                        <div class="form-group">
                            <label for="txtminvalue">Minimum Value</label>
                            <input type="text" class="form-control" id="txtminvalue" name="txtminvalue" />
                        </div>
                        <div class="form-group">
                            <label for="txtmaxvalue">Maximum Value</label>
                            <input type="text" class="form-control" id="txtmaxvalue" name="txtmaxvalue" />
                        </div>
                        <div class="form-group">
                            <label for="txtunit">Measurement Unit</label>
                            <input type="text" class="form-control" id="txtunit" name="txtunit" />
                        </div>

                        <div class="form-group">
                            <input type="button" id="btnanalyticsave" name="btnanalyticsave" class="btn btn-success" value="Save" />
                            <input type="button" name="btnanalyticcancel" class="btn btn-default" value="Cancel" />
                        </div>
                    </div>
                    <div class="card-footer">

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


@model IEnumerable<LIS.Model.Models.tblanalytic>

<p>
    @Html.ActionLink("Create New", "Create", null, null, new { @class = "btn btn-primary" })
</p>
<div class="card">
    <div class="card-header">
        <div class="card-title">
            Manage Test
        </div>
    </div>
    <div class="card-body col-md-12">
        <table id="tblanalytic" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        Diagnosisitem
                    </th>
                    <th>
                        Value
                    </th>
                    <th>
                        Minvalue
                    </th>
                    <th>
                        Maxvalue
                    </th>
                    <th>
                        Measurementunit
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.diagnosisitem)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.value)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.minvalue)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.maxvalue)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.measurementunit)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit","Analytic",new { id = item.analyticid })" class="btn btn-sm btn-warning">
                            <i class="fa fa-pencil"></i>
                        </a>|
                        <a href="@Url.Action("Details","Analytic",new { id = item.analyticid })" class="btn btn-sm btn-success">
                            <i class="fa fa-eye"></i>
                        </a>|
                        <a href="@Url.Action("Delete","Analytic",new { id = item.analyticid })" onclick="return confirm('Are you sure you wish to delete this analytic ?');" class="btn btn-sm btn-danger">
                            <i class="fa fa-trash"></i>
                        </a>|
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer">
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#tblanalytic').DataTable();
    });
</script>

@model LIS.Model.Models.tblanalytic

<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <center><h4 class="modal-title" id="exampleModalLongTitle">Analytic Details</h4></center>
            </div>

            <div class="modal-body">
                <div>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.diagnosisitem)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.diagnosisitem)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.value)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.value)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.minvalue)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.minvalue)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.maxvalue)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.maxvalue)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.measurementunit)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.measurementunit)
                        </dd>

                    </dl>
                </div>
            </div>
            <div class="modal-footer">
                <a href="@Url.Action("Edit","Analytic",new { id = Model.analyticid })" class="btn btn-sm btn-warning">
                    <i class="fa fa-pencil"></i>Edit
                </a>
                <a href="@Url.Action("Index")" class="btn btn-sm btn-info right">
                    <i class="fa fa-arrow-left"></i> Back
                </a>
            </div>
        </div>
    </div>
</div>

<script>
    jQuery(document).ready(function () {
        jQuery("#exampleModalCenter").modal('show');
    });
</script>
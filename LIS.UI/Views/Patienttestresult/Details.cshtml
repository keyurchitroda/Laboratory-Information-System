                        <div class="text-right"><b> Date</b> :&nbsp; @date </div>
                        @*<div><b> Doctor</b> :&nbsp; @doctorid </div>*@
                      

                        <table id="tblpatienttestresult" class="table table-striped table-bordered mt-2">
                            <thead>
                                <tr>
                                    @*<th>
                        Test name

@model IEnumerable<LIS.Model.Models.tblpatienttestresult>

@functions
                                {
    public string color(double value, double minvalue, double maxvalue, double reding)
    {
        if (value == reding)
            return "text-success";
        else if (reding >= minvalue && reding <= maxvalue)
            return "text-success";
        else
            return "text-danger";
    }
}


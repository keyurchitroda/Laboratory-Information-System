                        <div class="form-group">
                            <label class="control-label col-md-5" for="patientid">Patient Name</label>
                            <div class="col-md-10">
                                @Html.DropDownList("patientid", ViewBag.list1 as SelectList, "-- Select patientname --", htmlAttributes: new { @class = "form-control" })

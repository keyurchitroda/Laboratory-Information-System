        jQuery(function () {
            jQuery("#purchasedate").datepicker();
        });
    </script>*@

<script>
    $(document).ready(function () {
        $("#myform").validate({
            rules: {
                equipementid: {
                    required: true,

                },
                supplierid: {
                    required: true,

                },
                quantity: {
                    required: true,
                    number: true
                },
                purchaseprice: {
                    required: true,

                },
                purchasedate: {
                    required: true,

                },
            }
        })
    })
</script>


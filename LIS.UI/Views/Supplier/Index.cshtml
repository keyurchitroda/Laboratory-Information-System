@model IEnumerable<LIS.Model.Models.tblsupplier>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<p>
    @Html.ActionLink("Create New", "Create", null, null, new { @class = "btn btn-primary" })
</p>
<div class="card">
    <div class="card-header">
        <div class="card-title">
            Supplier
        </div>
    </div>
    <div class="card-body col-md-12">
        <table id="tblsupplier" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        Supplier Name
                    </th>
                    <th>
                        Mobile No
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Address
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.suppliername)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.suppliermoblienumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.supplieremail)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.supplieraddress)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit","Supplier",new { id = item.supplierid })" class="btn btn-sm btn-warning">
                                <i class="fa fa-pencil"></i>
                            </a>|
                            <a href="@Url.Action("Details","Supplier",new { id = item.supplierid })" class="btn btn-sm btn-success" @*data-toggle="modal" data-target="#exampleModalCenter"*@>
                                <i class="fa fa-eye"></i>
                            </a>|
                            <a href="@Url.Action("Delete","Supplier",new { id = item.supplierid })" onclick="return confirm('Are you sure you wish to delete this supplier?');" class="btn btn-sm btn-danger">
                                <i class="fa fa-trash"></i>
                            </a>|

                        </td>
                    </tr>
                }
            </tbody>




        </table>
    </div>
    <div class="card-footer">

    </div>
</div>


<script>
    $(document).ready(function () {
        $('#tblsupplier').DataTable();
    });
</script>
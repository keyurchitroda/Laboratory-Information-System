@model LIS.Model.Models.tblsupplier

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-body breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Add Supplier</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li>
                                <a href="@Url.Action("Index")" class="btn btn-sm btn-info right">
                                    <i class="fa fa-arrow-left"></i> Back
                                </a>
                            </li>

                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--Header-->


@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "myform" }))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row">

            <div class="col-xs-12 col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="card-header">

                    </div>
                    <div class="card-body col-md-12">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <label class="control-label col-md-2" for="suppliername">Supplier Name</label>
                            @*@Html.LabelFor(model => model.suppliername, htmlAttributes: new { @class = "control-label col-md-2" })*@
                            <div class="col-md-7">
                                @Html.EditorFor(model => model.suppliername, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.suppliername, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2" for="suppliermoblienumber">Mobile Number</label>
                            @*@Html.LabelFor(model => model.suppliermoblienumber, htmlAttributes: new { @class = "control-label col-md-2" })*@
                            <div class="col-md-7">
                                @Html.EditorFor(model => model.suppliermoblienumber, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.suppliermoblienumber, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2" for="supplieremail">Email</label>
                            @*@Html.LabelFor(model => model.supplieremail, htmlAttributes: new { @class = "control-label col-md-2" })*@
                            <div class="col-md-7">
                                @Html.EditorFor(model => model.supplieremail, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.supplieremail, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2" for="supplieraddress">Address</label>
                            @*@Html.LabelFor(model => model.supplieraddress, htmlAttributes: new { @class = "control-label col-md-2" })*@
                            <div class="col-md-7">
                                @Html.EditorFor(model => model.supplieraddress, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.supplieraddress, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" class="btn btn-success" />
                                <input type="reset" value="Cancle" class="btn btn-danger" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
<script>
    $(document).ready(function () {
        $("#myform").validate({
            rules: {
                suppliername: {
                    required: true,
                    minlength: 3,
                    maxlength: 15,
                    
                },
                suppliermoblienumber: {
                    required: true,
                    minlength: 10,
                    maxlength: 10,
                    number: true
                },
                supplieremail: {
                    required: true,
                    email: true
                },
                supplieraddress: {
                    required: true,
                      maxlength: 100
                },
            }
        })
})
</script>





